<Page x:Class="DnDSidekick.Presentation.CharacterSheetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDSidekick.Presentation"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterSheetPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Text="{Binding ProficiencyBonus}" Grid.Column="0" Grid.Row="0" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="3" >Proficiency Bonus</Label>
        <TextBox Text="{Binding Inspiration}" Grid.Column="0" Grid.Row="1" Margin="0,0,0,10" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Margin="0,0,0,10">Inspiration</Label>
        <StackPanel Grid.Column="0" Grid.Row="2" Grid.RowSpan="8">
            <TextBlock Text="{Binding Strength.Modifier}" FontSize="15" Margin="0,5,0,0" TextAlignment="Center"/>
            <TextBox Text="{Binding Strength.Score}" FontSize="20" Width="50" Height="50" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <Label FontSize="10">Strength</Label>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,5,0,0">
            <CheckBox IsChecked="{Binding Strength.SavingThrow.Proficiency}" Height="16"/>
            <CheckBox Height="16"/>
            <CheckBox Height="16"/>
            <CheckBox Height="16"/>
            <CheckBox Height="16"/>
            <CheckBox Height="16"/>
        </StackPanel>
        <StackPanel Grid.Column="2" Grid.Row="2" Margin="0,5,0,0">
            <TextBlock Height="16" Width="16" FontSize="10" TextAlignment="Center"/>
            <TextBlock Height="16" Width="16" FontSize="10" TextAlignment="Center"/>
            <TextBlock Height="16" Width="16" FontSize="10" TextAlignment="Center"/>
            <TextBlock Height="16" Width="16" FontSize="10" TextAlignment="Center"/>
            <TextBlock Height="16" Width="16" FontSize="10" TextAlignment="Center"/>
            <TextBlock Height="16" Width="16" FontSize="10" TextAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="3" Grid.Row="2" Margin="0,5,0,0">
            <TextBlock FontSize="10" Height="16" Width="110">Test</TextBlock>
            <TextBlock FontSize="10" Height="16" Width="110">Test</TextBlock>
            <TextBlock FontSize="10" Height="16" Width="110">Test</TextBlock>
            <TextBlock FontSize="10" Height="16" Width="110">Test</TextBlock>
            <TextBlock FontSize="10" Height="16" Width="110">Test</TextBlock>
            <TextBlock FontSize="10" Height="16" Width="110">Test</TextBlock>
        </StackPanel>

    </Grid>
</Page>
