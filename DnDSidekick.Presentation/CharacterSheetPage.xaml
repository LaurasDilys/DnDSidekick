<Page x:Class="DnDSidekick.Presentation.CharacterSheetPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DnDSidekick.Presentation"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CharacterSheetPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Text="{Binding ProficiencyBonus}" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="1" Grid.Row="0">Proficiency Bonus</Label>
        <TextBox Grid.Column="0" Grid.Row="1" Text="{Binding Inspiration}" TextAlignment="Center" VerticalContentAlignment="Center"/>
        <Label Grid.Column="1" Grid.Row="1">Inspiration</Label>
        <StackPanel Grid.Column="0" Grid.Row="2" Grid.RowSpan="8">
            <TextBlock Text="{Binding Strength.Modifier}" FontSize="15" Margin="0,5,0,0" TextAlignment="Center"/>
            <TextBox Text="{Binding Strength.Score}" FontSize="20" Width="50" Height="50" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <Label FontSize="10">Intelligence</Label>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,5,0,0">
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
        </StackPanel>

        <StackPanel Grid.Column="0" Grid.Row="3" Grid.RowSpan="7">
            <TextBlock Text="{Binding Strength.Modifier}" FontSize="15" Margin="0,5,0,5" TextAlignment="Center"/>
            <TextBox Text="{Binding Strength.Score}" FontSize="20" Width="50" Height="50" TextAlignment="Center" VerticalContentAlignment="Center"/>
            <Label FontSize="10">Intelligence</Label>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="3" Margin="0,5,0,0">
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
            <TextBox FontSize="10" Height="16">Test</TextBox>
        </StackPanel>
        
    </Grid>
</Page>
