<Window x:Class="DnDSidekick.Presentation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DnDSidekick.Presentation"
        mc:Ignorable="d"
        Title="D&amp;D Sidekick" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Width="300" Height="70" x:Name="btnCreateOrEdit" Grid.Row="1" Margin="10 10 10 10" FontSize="25">Create or Edit Character</Button>
        <Button Width="300" Height="70" x:Name="btnCombat" Grid.Row="2" Margin="10 10 10 10" FontSize="25">Begin Combat</Button>
    </Grid>
</Window>
